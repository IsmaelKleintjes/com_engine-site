<?xml version="1.0" encoding="utf-8"?>
<form>
<fieldset name="general" addfieldpath="/administrator/components/com_engine/models/fields/">
    <field
            name="name"
            type="text"
            label="name"
			labelclass="control-label"
            />
    
    <field
            name="price"
            type="text"
            label="price"
			labelclass="control-label"
            />

    <field
            name="description"
            type="textarea"
            label="description"
            rows="9"
			labelclass="control-label"
            />
	</fieldset>
	<fieldset name="hidden">
		<field
				name="captcha"
				type="captcha"
				validate="captcha"
		/>
		<field 
			name="id"
			type="hidden"
		/>
	</fieldset>
</form>